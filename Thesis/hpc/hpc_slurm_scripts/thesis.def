Bootstrap: docker
From: python:3.9-slim

%labels
    Author WouterVanDerLinden
    Description "Container for MOEA convergence experiments"

%files
    /home/wmvanderlinden/MOEA_convergence /opt/MOEA_convergence

%post
    # System dependencies
    apt-get update && apt-get install -y \
        ca-certificates \
        build-essential \
        python3-dev \
        git
    
    rm -rf /var/lib/apt/lists/*

    # Initialize submodules
    cd /opt/MOEA_convergence
    git submodule update --init --recursive --no-fetch

    # Install core dependencies FIRST
    python3 -m pip install --upgrade pip
    
    # Install other requirements with version locking
    pip install --no-cache-dir -r /opt/MOEA_convergence/Thesis/requirements.txt
    
    # Install JUSTICE_fork without dependencies
    cd /opt/MOEA_convergence/JUSTICE_fork
    printf '[build-system]\nrequires = ["setuptools"]\nbuild-backend = "setuptools.build_meta"\n' > pyproject.toml
    printf 'from setuptools import setup\nsetup(name="justice_fork")\n' > setup.py
    pip install --no-deps .

%environment
    export PYTHONPATH=/opt/MOEA_convergence:$PYTHONPATH 
    export LC_ALL=C
    export LANG=C
